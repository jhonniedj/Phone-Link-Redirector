{
  "manifest_version": 3,
  "name": "Phone link redirector (by Jona)",
  "description": "Edge my ass!",
  "version": "1.0",
  "permissions": [
    "cookies",
    "scripting",
    "declarativeNetRequest",
    "browsingData",
    "tabs"
  ],
  "host_permissions": [
    "*://*.bing.com/*"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}